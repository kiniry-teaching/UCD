<!-- Screen5: Main Access Blogger Profile -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_white"
	> 

	<ImageView android:id="@+id/s5_blogger_logo"
   		android:src="@drawable/superblog_icon_small"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="110px"
   		>
	</ImageView>

	<TextView android:id="@+id/s5_intro_text" 
		android:text="Sign in to Blogger"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/s5_blogger_logo"
		android:textAlign="start"
		>
	</TextView>

	<TextView android:id="@+id/s5_textview_username" 
		android:text="Username"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/s5_intro_text"
		>
	</TextView>
	
	<EditText 
    		android:id="@+id/s5_edittext_username" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:background="@android:drawable/editbox_background"
            android:layout_below="@id/s5_textview_username"
            >
   </EditText>
   
   	<TextView android:id="@+id/s5_textview_password" 
		android:text="Password"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/s5_edittext_username"
		>
	</TextView>
	
	<EditText 
    		android:id="@+id/s5_edittext_password" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:background="@android:drawable/editbox_background"
            android:layout_below="@id/s5_textview_password"
            android:maxWidth="20pt"
            >
   </EditText>
  

	<Button android:id="@+id/s1_blogger_button" 
		android:text="Sign in"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeft="@id/s1_feeds_button"
        android:layout_below="@id/s5_edittext_password"
		>
	</Button>

</RelativeLayout>

